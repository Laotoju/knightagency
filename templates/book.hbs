<div class="amazing-box">
    <h2>Book Flight</h2>
    <div class="container">
        <form class="main-form" action="/book" method="post">
            <div class="row">
                <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-12">
                    <label for="flight_number">Flight Number</label>
                    <input class="form-control" name="flight_number" type="text">
                </div>
                <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-12">
                    <label for="destination">Destination</label>
                    <input class="form-control" name="destination" type="text">
                </div>
                <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-12">
                    <label for="departure_date">Departure Date</label>
                    <input class="form-control" name="departure_date" type="date">
                </div>
                <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-12">
                    <label for="passenger_name">Passenger Name</label>
                    <input class="form-control" name="passenger_name" type="text">
                </div>
                <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-12">
                    <label for="passport_number">Passport Number</label>
                    <input class="form-control" name="passport_number" type="text">
                </div>
                <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-12">
                    <label for="email">Email</label>
                    <input class="form-control" name="email" type="email">
                </div>
                <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-12">
                    <label for="phone">Phone</label>
                    <input class="form-control" name="phone" type="text">
                </div>
                <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-12">
                    <input class="submit" type="submit">
                </div>
            </div>
        </form>
